<div id='main' role='main'>
  <div class='full'>
    <div class='row'>
      <div class='large-7 columns'>
        <div class='mod modBoxedSlider'>
          <div class='slides'>
            <div class='slide'>
              <img width="800" height="500" alt="" src="<%= project.logo_file %>" />
            </div>
          </div>
        </div>
      </div>
      <div class='large-5 columns'>
        <h3><%= project.name %></h3>
        <p>
          <%= project.description %>
        </p>
        <ul class='info'>
          <li>
            <strong>Date:</strong>
            <%= project.date %>
          </li>
          <li>
            <strong>Project:</strong>
            <a href="<%= project.url %>"><%= project.url %></a>
          </li>
        </ul>
        <div class='spacing'></div>
        <a class='button small' target="_blank" href="<%= project.website %>">Visit website</a>
        <div class='spacing'></div>
        <ul class='info'>
          <li style="text-align: center">
            <a href='/projects' title='back to work list'>
              <i class='icon-layout'></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class='four spacing'></div>
  </div>
</div>
